<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange" /> <!-- Внесете ја вашата портокалова боја -->
            <corners android:radius="4dp" /> <!-- Опционално, ако сакате закруглени агли -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" />
            <stroke android:color="@android:color/darker_gray" android:width="1dp" /> <!-- Ако сакате и контура -->
        </shape>
    </item>
</selector>
